# Database Configuration
DATABASE_URL=jdbc:mysql://localhost:3306/BlogWebsite?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
DATABASE_USER=root
DATABASE_PASSWORD=root
PORT=8081

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SPRING_APPLICATION_NAME=blog-backend

# JPA Configuration
JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect
JPA_HIBERNATE_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# Logging Configuration (set to INFO in production)
LOG_LEVEL_APP=INFO
LOG_LEVEL_WEB=INFO
LOG_LEVEL_SECURITY=INFO

# Session Configuration
SESSION_TIMEOUT=30m
COOKIE_HTTP_ONLY=true
COOKIE_SECURE=true

# Security Configuration
SERVER_SERVLET_SESSION_COOKIE_SECURE=true

# Uncomment and set these values for your deployment environment
# DATABASE_URL=jdbc:mysql://your-production-host:3306/your-db-name?useSSL=true&serverTimezone=UTC
# DATABASE_USER=production_user
# DATABASE_PASSWORD=strong_password